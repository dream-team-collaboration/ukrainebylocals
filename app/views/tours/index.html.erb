<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.title %></td>
        <td><%= image_tag(tour.photos.first.index.url) %></td>
        <td><%= tour.body %></td>
        <td><%= link_to 'Show', tour %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
          <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= if user_signed_in? then link_to 'New Tour', new_tour_path end %>
